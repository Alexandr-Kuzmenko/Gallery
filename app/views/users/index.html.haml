.user_bar_menu.btn-toolbar.justify-content-between.mb-2{ "aria-label": 'User menu devider', role: 'toolbar' }
  .btn-group.flex-wrap{'aria-label' => 'Available actions', role: 'group'}
    = link_to 'Profile settings', edit_user_path(@user), class: 'btn btn-warning'
  .btn-group.flex-wrap{'aria-label' => 'Delete action', role: 'group'}
    = link_to 'Delete account', user_path(@user), class: 'btn btn-danger', method: :delete,
                                data: { confirm: 'Do you really want to delete your own account?'}
.row
  .container-fluid.align-items-center
    .row
      .col-auto.p-0.mr-1
        %div.img-thumbnail
          - if @user.avatar?
            %img.img-fluid{ alt: 'avatar', src: @user.avatar.url }
          - else
            %img.img-fluid{ alt: 'avatar', src: 'avatar_default.jpg' }
          .caption
            %span
              Avatar
      .col-auto.other.p-0
        %table.table-bordered.table-striped{ style: 'background-color: #DCDCDC;' }
          %tbody
            %tr
              %td
                %span
                  Email:
              %td
                = @user.email
            %tr
              %td
                %span
                  Nickname:
              - if @user.nickname && !@user.nickname.eql?('')
                %td
                  = @user.nickname
              - else
                %td
                  %span User
                  = @user.id
- if @user.subscriptions.first
  .subscriptions_block
    .row
      %alert.alert.alert-success{ role: "alert", style: 'width: 50%; height: 40px;' }
        %span.vertical-center
          Your subscriptions:
    - @user.subscriptions.each do |subs|
      %button.btn.btn-sm.btn-success.disabled.mb-2.mt-2
        %span
          #{ subs.category.name } - last updates
      .row
        - subs.category.wallpapers.last(5).reverse.each do |wp|
          %div.img-thumbnail
            = link_to  wallpaper_path(wp), target: '_blank' do
              %img.img-fluid{ alt: 'recent wallpaper', src: wp.image.thumb.url }
