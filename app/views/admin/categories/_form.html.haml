= form_for @category.becomes(Category) do |f|
  .row
    .col-xs-2
      = f.label :name, 'Category name: '
    .col-xs-10
      = f.text_field :name
  .row
    .col-xs-2
      = f.label :locked, 'Is category locked?'
    .col-xs-10
      = f.check_box :locked#, {}, true, false
  %br/
  .row
    .col-xs-12
      = f.submit
