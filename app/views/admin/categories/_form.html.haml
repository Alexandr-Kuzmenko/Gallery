= form_for @category do |f|
  .row
    %table
      %tbody
        %tr
          %td
            = f.label :name, 'Name:'
            = f.text_field :name
        %tr
          %td{ colspan: '2' }
            = f.label :locked, 'Is category locked?'
            = f.check_box :locked
  .action
    = f.submit 'Save', class: "btn btn-info"
    = link_to 'Back', admin_categories_path, class: "button"
