.row
  - @wallpapers.each_with_index do |wallpaper, index|
    .btn-group.ml-2.mr-2.mt-2.mb-2{"aria-label" => "top #{index + 1} wallpapers", role: "group"}
      .container.align-items-center
        .row
          - if wallpaper.category
            = link_to "Watch category: #{wallpaper.category.name}", category_path(wallpaper.category), class: "btn btn-info btn-sm btn-block"
          - else
            %button.btn.btn-info.btn-sm.btn-block.disabled
              Uncategorized
        .row
          .col-auto
            = link_to image_tag(wallpaper.image.thumb.url, alt: 'image'), wallpaper.image.url, class: "btn btn-secondary", target: '_blank'
            %br/
            .btn-group.ml-2.mr-2.mt-2.mb-2{"aria-label" => "Available actions", role: "group"}
              %button.btn.btn-info.disabled
                Likes counter:
                = wallpaper.likes_count
              = link_to 'like', new_wallpaper_like_path(wallpaper), class: "btn btn-success"
          .col-auto.other
            .btn-group-vertical.align-items-center.mb-1.ml-2.mr-2.mt-2.mb-2
              .btn-group.mb-1
                = link_to 'Comment', wallpaper_path(wallpaper), class: "btn btn-block btn-success"
              .btn-group.mb-1
                = link_to 'Correct', edit_wallpaper_path(wallpaper), class: "btn btn-block btn-info"
              .btn-group.mb-1
                = link_to 'Destroy', wallpaper_path(wallpaper), class: "btn btn-block btn-outline-danger", method: :delete,
                data: { confirm: 'Are you sure?' }
.row
  = paginate @wallpapers
