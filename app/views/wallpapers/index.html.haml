%body
  - @wallpapers.each do |wallpaper|
    .container.align-items-center
      .row
        .col-xs-4
          %a.btn.btn-info.disabled
            %span Category:
            = wallpaper.category.name
      .row
        .col-xs-2
          = link_to(image_tag(wallpaper.image.thumb.url, alt: 'image'), wallpaper.image.url, target: '_blank')
          %br/
          %span Likes counter:
          %a.btn.btn-info.disabled
            = wallpaper.likes_count
        .col-xs-2.other
          = link_to 'Comment', wallpaper_path(wallpaper), class: "btn btn-default"
          %br/
          = link_to 'Edit', edit_wallpaper_path(wallpaper), class: "btn btn-default"
          %br/
          = link_to 'Destroy', wallpaper_path(wallpaper), class: "btn btn-default", method: :delete,
          data: { confirm: 'Are you sure?' }
          %br/
    %br/
  = paginate @wallpapers