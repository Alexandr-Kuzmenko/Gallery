<%= form_with(model: [ @wallpaper, @wallpaper.posts.build ], local: true) do |f| %>
  <div class="row">
    <div class="col-xs-2"><%= f.label :'Type your comment:' %></div>
    <div class="col-xs-4"><%= f.text_area :text %></div> 
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="row">
    <div class="col-xs-1"><%= f.submit %></div>
  </div>
<% end %>